                </TableRow>
                <!--TableRow>
                    <EditText android:id="@+id/ability_edit5_second"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dice_margin"
                        android:maxLines="1"
                        android:inputType="textNoSuggestions"
                        android:background="@color/white"
                        android:text=""
                        android:imeOptions="actionDone" />
                    <EditText android:id="@+id/ability_edit6_second"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dice_margin"
                        android:maxLines="1"
                        android:inputType="textNoSuggestions"
                        android:background="@color/white"
                        android:text=""
                        android:imeOptions="actionDone" />
                </TableRow-->
            </TableLayout>
            <!--View
                android:layout_height="5dp"
                android:layout_width="match_parent" /-->
        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"/>
        <View
            android:layout_width="5dp"
            android:layout_height="match_parent" />
        <TextView android:id="@+id/result_text_second"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/TextAppearance.AppCompat.Body2" />
        <View
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="@color/second"/>
    </LinearLayout>
 
    <!--View
        android:layout_height="5dp"
        android:layout_width="match_parent" /-->
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"/>
    <!--View
        android:layout_height="5dp"
        android:layout_width="match_parent" /-->

    <Spinner android:id="@+id/graph_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:padding="0dp"
        style="@style/TextAppearance.AppCompat.Body2" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result_table" >
    </TableLayout>

    <!--View
        android:layout_height="5dp"
        android:layout_width="match_parent" /-->
    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"/>
