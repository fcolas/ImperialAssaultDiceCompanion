<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="net.franciscolas.imperialassaultdicecompanion.AttributeTestFragment">

    <Spinner android:id="@+id/number_blue"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dice_margin"
        android:background="@color/blue"
        android:gravity="center" />
    <Spinner android:id="@+id/number_green"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dice_margin"
        android:background="@color/green"
        android:gravity="center" />
    <Spinner android:id="@+id/number_yellow"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dice_margin"
        android:background="@color/yellow"
        android:gravity="center" />
    <Spinner android:id="@+id/number_red"
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dice_margin"
        android:background="@color/red"
        android:gravity="center" />
    <TextView android:id="@+id/result_text"
        android:layout_weight="8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Body2" />
    <Button
        android:layout_width="48sp"
        android:layout_height="wrap_content"
        android:text="@string/button_close"
        android:id="@+id/close_fragment" />

</LinearLayout>
