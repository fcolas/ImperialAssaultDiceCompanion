<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="net.franciscolas.imperialassaultdicecompanion.AttackTabFragment" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/attack_title"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Headline" />

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Spinner android:id="@+id/number_blue"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/blue"
            android:gravity="center" />
        <Spinner android:id="@+id/number_green"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/green"
            android:gravity="center" />
        <Spinner android:id="@+id/number_yellow"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/yellow"
            android:gravity="center" />
        <Spinner android:id="@+id/number_red"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/red"
            android:gravity="center" />
        <View
            android:layout_width="@dimen/dice_margin"
            android:layout_height="match_parent" />
        <Spinner android:id="@+id/number_black"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/black"
            android:popupBackground="@color/black"
            android:textColor="@color/white"
            android:gravity="center" />
        <Spinner android:id="@+id/number_white"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/white"
            android:gravity="center" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"></FrameLayout>

        <EditText android:id="@+id/number_range"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dice_margin"
            android:background="@color/white"
            android:gravity="center"
            android:inputType="number|numberDecimal"
            android:text="0" />
    </LinearLayout>

    <TextView android:id="@+id/result_text"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        style="@style/TextAppearance.AppCompat.Body2" />

</LinearLayout>
